<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4D504"
    android:paddingVertical="10dp"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:srcCompat="@drawable/logo"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/list_team_main_button"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#020200"
                android:text="@string/list_of_teams"
                android:textColor="#F4D504"
                android:textSize="24sp"
                app:icon="@drawable/equipos"
                app:iconSize="50dp"
                app:iconTint="#F4D504" />

            <!--            <Button-->
            <!--                android:id="@+id/add_team_main_button"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/Add" />-->
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/list_match_main_button"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#020200"
                android:text="@string/list_of_matches"
                android:textAllCaps="false"
                android:textColor="#F4D504"
                android:textSize="24sp"
                app:icon="@drawable/partidos"
                app:iconSize="50dp"
                app:iconTint="#F4D504" />

            <!--            <Button-->
            <!--                android:id="@+id/add_team_main_button"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/Add" />-->
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:textSize="24sp"
                app:icon="@drawable/entrenador"
                app:iconSize="50dp"
                android:id="@+id/list_user_main_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#020200"
                android:text="@string/list_of_users"
                android:textColor="#F4D504"
                app:iconTint="#F4D504" />

            <Button
                android:id="@+id/add_user_main_button"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#020200"
                android:textColor="#F4D504"
                android:textSize="24sp"
                app:icon="@drawable/ic_baseline_data_saver_on_24"

                app:iconSize="50dp"
                app:iconTint="#F4D504" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

